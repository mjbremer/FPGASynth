module rom
#(
parameter INPUT_MEM_FILE ="",
parameter ADDRWIDTH = 12, // For 4096 addresses
parameter WIDTH = 16
)
(
        input Clk,
        input [ADDRWIDTH-1:0] addr, // Address lines for saving data to memory
        output [WIDTH-1:0] data // Data out
);

reg [WIDTH-1:0] memory [(2**ADDRWIDTH) -1:0];

// Initialize RAM from file
// WHAT SHOULD GO HERE?

//initial begin
//  if (INPUT_MEM_FILE != "") begin
//    $readmemh(INPUT_MEM_FILE, memory);
//  end
//end


always @(posedge Clk) begin

    // Place data from RAM
    data <= memory[addr];
end        
endmodule